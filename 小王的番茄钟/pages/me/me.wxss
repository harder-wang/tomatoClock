.avatar-wrapper {
  background: #E7624F;
  padding: 50rpx 0;
}
 
.avatar-wrapper .avatar {
  margin: 0 auto;
  text-align: center;
}
 
.avatar-wrapper .avatar image {
  width: 200rpx;
  height: 200rpx;
}

.avatar-wrapper button{
  width: 300rpx;
}
 
.avatar-wrapper .text {
  text-align: center;
  color: #fff;
}

.avatar-wrapper .text button{
  height: 90rpx;
  width: 300rpx ;
  background-color: white;
  color: #000;
  font-size: 40rpx ;
  line-height: 90rpx;
}
 
.listimg image {
  vertical-align: middle;
  width: 55rpx;
  height: 55rpx;
  margin-left: -8rpx;
  margin-right: 10rpx;
}
 
.content{
  display: flex;
  width: 100%;
  height: 110rpx;
  line-height: 110rpx;
  background-color: #fff;
  font-size: 31rpx;
  padding-right:0;
}
 
/* 天气卡片 */
.wai{
  height: 200px;
  width: 100%;
  background-color: #E7624F;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.head{
  height: 100%;
  width: 90%;
  display: flex;
  flex-direction: row;
  /* margin-bottom: 10px; */
  margin-top: 10px;
  margin-bottom: 40px;
  /* background-color: rgb(0,0,0,.2); */
  border-radius: 10px;
  box-shadow:3px 3px 3px 3px rgb(0,0,0,.2);
}

.left{
  height: 100%;
  width: 50%;
  display: flex;
  color: #fff;
  flex-direction:column;
  align-items: center;    /**子view垂直居中*/
  vertical-align: center; /**垂直居中*/
  justify-content: center; /**内容居中*/
  /* background-color: #aaa; */
}
.left-ima{
  height: 50%;
  width: 70%;
  
  /* background-color: #888; */
}
.right{
  height: 100%;
  width: 50%;
  padding-top:  10px;
  /* font-family: SimHei; */
  color: #fff;
  /* background-color: green; */
  display: flex;
  flex-direction:column;
  /*align-items: center;    *子view垂直居中*/
  vertical-align: center; /**垂直居中*/
  justify-content: center; /*内容居中 */
}

.right-txt0{
  font-size: 14px;
}
.right-txt2{
  margin: 20px;
  font-size: 24px;
}

/*分割线样式*/
.divLine{
 background: #F0F0F0;
 width: 100%;
 height: 5rpx;
}
 
.arrows image {
  vertical-align: middle;
  width: 35rpx;
  height: 35rpx;
  margin-left: 500rpx;
}

.progress button {
  display: flex;
  width: 100%;
  height: 110rpx;
  line-height: 110rpx;
  background-color: #fff;
  font-size: 31rpx;
  padding-right:0;
}

.progress button::after, .list-wrapper button::after {
  border: none;
}

.progress .ico image {
  vertical-align: middle;
  width: 55rpx;
  height: 55rpx;
  margin-left: -8rpx;
  margin-right: 10rpx;
} 

.progress .progress_text {
  width: 625rpx;
  text-align: left;
}

.progress .point image {
  vertical-align: middle;
  width: 35rpx;
  height: 35rpx;
}